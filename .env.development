PORT=8888
# App
NODE_ENV=development
APP_NAME=Do Something API
APP_VERSION=1.0.0
HOST=localhost
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dosomething_user
DB_PASSWORD=123456
DB_DATABASE=dosomething_db

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=do-something-api
JWT_AUDIENCE=do-something-client

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Frontend
FRONTEND_URL=http://localhost:5173

# Email (Optional)
EMAIL_FROM=noreply@dosomething.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

